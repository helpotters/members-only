<!DOCTYPE html>
<html>
  <head>
    <title>Dungeonkeep</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://unpkg.com/bulmaswatch/darkly/bulmaswatch.min.css">
    <script src="https://use.fontawesome.com/d29736871c.js"></script>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar is-dark">
      <div class="navbar-brand">
        <%= link_to root_path, class:"navbar-item" do %>
          <h1 class="title is-5 is-uppercase">Dungeonkeep</h1>
        <% end %>
      </div>
      <div class="navbar-menu">
        <div class="navbar-end">
          <% if user_signed_in? %>
            <div class="field is-grouped">
              <div class="control navbar-item">
                <%= link_to "New post", new_post_path, class:"button is-link" %>
              </div>
              <div class="control navbar-item">
                <%= button_to "Logout", destroy_user_session_path, method: :delete, class:"button is-info "%>
              </div>
          <% else %>
              <div class="control navbar-item">
                <%= link_to "Sign up", new_user_registration_path, class: "button is-info"  %>
              </div>
              <div class="control navbar-item">
                <%= link_to "Log in", new_user_session_path, class: "button is-link" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
